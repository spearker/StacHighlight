<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_album"
        android:layout_marginStart="17dp"
        android:background="@drawable/uploadbtn" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="570dp">

            <ImageView
                android:id="@+id/write"
                android:layout_width="233dp"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:src="@drawable/write" />

            <EditText
                android:id="@+id/text_upload"
                android:layout_width="268dp"
                android:layout_height="69dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="92dp"
                android:inputType="textImeMultiLine" />

            <ImageView
                android:id="@+id/iv_view"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="70dp" />


        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_menu"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/cross" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_album"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/btn_menu"
        android:layout_toStartOf="@+id/btn_menu"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:srcCompat="@drawable/album" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_capture"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/btn_upload"
        android:layout_toStartOf="@+id/btn_album"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:srcCompat="@drawable/capture" />




</RelativeLayout>