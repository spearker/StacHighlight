<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/comment_userimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="18dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/comments_username"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/comment_userimage"
            android:layout_marginStart="71dp"
            android:gravity="center_vertical"
            android:text="세명짱" />

        <TextView
            android:id="@+id/comments_comments"
            android:layout_width="329dp"
            android:layout_height="84dp"
            android:layout_alignStart="@+id/comment_userimage"
            android:layout_below="@+id/comment_userimage"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text="1번문항에서 4번이 답이네요!" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>