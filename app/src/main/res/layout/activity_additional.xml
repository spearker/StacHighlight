<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/addinformation"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/add_information" />

    <ImageView
        android:id="@+id/add_userimage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/addinformation"
        android:layout_centerHorizontal="true"
        android:src="@drawable/userimage1" />

    <Button
        android:id="@+id/add_userimage_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/add_userimage"
        android:layout_alignEnd="@+id/add_userimage"
        android:background="@drawable/add_userimage" />

    <ImageView
        android:id="@+id/show_username"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_userbelong"
        android:layout_marginTop="230dp"
        android:src="@drawable/user_name" />

    <EditText
        android:id="@+id/add_username"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_username"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/show_gender"
        android:layout_width="77dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/show_username"
        android:layout_marginEnd="113dp"
        android:src="@drawable/gender" />

    <CheckBox
        android:id="@+id/add_gender"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_alignEnd="@+id/add_birthday_text"
        android:layout_below="@+id/show_username"
        android:button="@drawable/male_female_select" />

    <ImageView
        android:id="@+id/show_birthday"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_username"
        android:layout_marginTop="15dp"
        android:layout_marginStart="42dp"
        android:src="@drawable/date_of_birth" />

    <TextView
        android:id="@+id/add_birthday_text"
        android:layout_width="265dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_birthday"
        android:text="0000년 00월 00일"
        android:textSize="15dp" />

    <Button
        android:id="@+id/add_birthday"
        android:layout_width="10dp"
        android:layout_height="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add_birthday_text"
        android:layout_marginEnd="87dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/timebutton" />

    <ImageView
        android:id="@+id/show_userbelong"
        android:layout_width="60dp"
        android:layout_height="14dp"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_birthday_text"
        android:src="@drawable/user_belong" />

    <Spinner
        android:id="@+id/add_userbelong"
        android:layout_width="133dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/addinformation"
        android:layout_below="@+id/show_userbelong"
        android:layout_marginEnd="135dp"
        android:layout_marginTop="13dp"></Spinner>

    <Spinner
        android:id="@+id/add_userclass"
        android:layout_width="119dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/addinformation"
        android:layout_alignTop="@+id/add_userbelong"
        android:layout_marginEnd="-3dp"></Spinner>

    <RelativeLayout
        android:id="@+id/userimage_pick"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_userimage"
        android:background="@drawable/colorview"
        android:visibility="gone">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/userimage1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"/>
                <RadioButton
                    android:id="@+id/userimage2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"/>
                <RadioButton
                    android:id="@+id/userimage3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"/>
                <RadioButton
                    android:id="@+id/userimage4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"/>
                <RadioButton
                    android:id="@+id/userimage5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"/>
            </RadioGroup>
        </HorizontalScrollView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/show_interest"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_userbelong"
        android:src="@drawable/interests" />

    <Spinner
        android:id="@+id/add_userinterest"
        android:layout_width="269dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_interest"
        android:layout_marginTop="13dp"></Spinner>

    <Button
        android:id="@+id/add_information"
        android:layout_width="248dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_check" />

</RelativeLayout>