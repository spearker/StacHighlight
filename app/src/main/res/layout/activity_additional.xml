<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/addinformation"
        android:layout_width="177dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/add_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_userimage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/userimage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_userimage_button"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/add_userimage"
        android:layout_alignEnd="@+id/add_userimage"
        android:background="@drawable/add_userimage"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/show_gender"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_userbelong"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/user_name"
        android:text="Gender"
        app:layout_constraintBottom_toTopOf="@+id/add_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_userimage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/show_username"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_userbelong"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="834dp"
        android:src="@drawable/user_name"
        android:text="User Name"
        app:layout_constraintBottom_toTopOf="@+id/add_username"
        app:layout_constraintEnd_toStartOf="@+id/show_gender"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_userimage"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/add_username"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_username"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/block"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/show_birthday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

    <CheckBox
        android:id="@+id/add_gender"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_below="@+id/show_username"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/add_userimage"
        android:button="@drawable/male_female_select"
        app:layout_constraintBottom_toTopOf="@+id/add_birthday_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toEndOf="@+id/add_username"
        app:layout_constraintTop_toBottomOf="@+id/add_userimage"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/show_birthday"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_username"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="52dp"
        android:text="Date of brith"
        app:layout_constraintBottom_toTopOf="@+id/add_birthday_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/add_birthday_text"
        android:layout_width="255dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_birthday"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/block"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:text="0000년 00월 00일"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/show_userbelong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_birthday"
        android:layout_width="10dp"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/timebutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559" />

    <TextView
        android:id="@+id/show_userbelong"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_birthday_text"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="52dp"
        android:text="User belong"
        app:layout_constraintBottom_toTopOf="@+id/add_userbelong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/add_userbelong"
        android:layout_width="255dp"
        android:layout_height="36dp"
        android:layout_below="@+id/show_userbelong"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/block"
        app:layout_constraintBottom_toTopOf="@+id/add_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent">

    </Spinner>

    <RelativeLayout
        android:id="@+id/userimage_pick"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_userimage"
        android:background="@drawable/colorview"
        android:visibility="gone">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/userimage1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage1"/>
                <RadioButton
                    android:id="@+id/userimage2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage2"/>
                <RadioButton
                    android:id="@+id/userimage3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage3"/>
                <RadioButton
                    android:id="@+id/userimage4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage4"/>
                <RadioButton
                    android:id="@+id/userimage5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage5"/>
            </RadioGroup>
        </HorizontalScrollView>
    </RelativeLayout>

    <TextView
        android:id="@+id/show_interest"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_userbelong"
        android:src="@drawable/interests" />

    <Spinner
        android:id="@+id/add_userinterest"
        android:layout_width="256dp"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/show_interest"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/block"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Spinner>

    <Button
        android:id="@+id/add_information"
        android:layout_width="248dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_userinterest"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="52dp"
        android:text="Interest"
        app:layout_constraintBottom_toTopOf="@+id/add_userinterest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
