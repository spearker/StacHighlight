<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/addinformation"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/add_information"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="42dp" />

    <ImageView
        android:id="@+id/add_userimage"
        android:layout_width="94dp"
        android:layout_height="90dp"
        android:layout_below="@+id/addinformation"
        android:layout_centerHorizontal="true"
        android:src="@drawable/userimage1"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="118dp" />

    <Button
        android:id="@+id/add_userimage_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/add_userimage"
        android:layout_alignEnd="@+id/add_userimage"
        android:background="@drawable/add_userimage"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="188dp" />

    <ImageView
        android:id="@+id/show_username"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_userbelong"
        android:src="@drawable/user_name"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="218dp" />

    <EditText
        android:id="@+id/add_username"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_username"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="240dp" />

    <ImageView
        android:id="@+id/show_gender"
        android:layout_width="77dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/show_username"
        android:src="@drawable/gender"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="226dp" />

    <CheckBox
        android:id="@+id/add_gender"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_alignEnd="@+id/add_birthday_text"
        android:layout_below="@+id/show_username"
        android:button="@drawable/male_female_select"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="240dp" />

    <ImageView
        android:id="@+id/show_birthday"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_username"
        android:src="@drawable/date_of_birth"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:id="@+id/add_birthday_text"
        android:layout_width="265dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_birthday"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="0000년 00월 00일"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="315dp" />

    <Button
        android:id="@+id/add_birthday"
        android:layout_width="12dp"
        android:layout_height="9dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add_birthday_text"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/timebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="319dp" />

    <ImageView
        android:id="@+id/show_userbelong"
        android:layout_width="60dp"
        android:layout_height="14dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_birthday_text"
        android:src="@drawable/user_belong"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="363dp" />

    <Spinner
        android:id="@+id/add_userbelong"
        android:layout_width="133dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/add_userclass"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="377dp"></Spinner>

    <Spinner
        android:id="@+id/add_userclass"
        android:layout_width="119dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/addinformation"
        android:layout_alignTop="@+id/add_userbelong"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="377dp"></Spinner>

    <RelativeLayout
        android:id="@+id/userimage_pick"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_userimage"
        android:background="@drawable/colorview"
        android:visibility="gone">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/userimage1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage1"/>
                <RadioButton
                    android:id="@+id/userimage2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage2"/>
                <RadioButton
                    android:id="@+id/userimage3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage3"/>
                <RadioButton
                    android:id="@+id/userimage4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage4"/>
                <RadioButton
                    android:id="@+id/userimage5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage5"/>
            </RadioGroup>
        </HorizontalScrollView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/show_interest"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_userbelong"
        android:src="@drawable/interests"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="420dp" />

    <Spinner
        android:id="@+id/add_userinterest"
        android:layout_width="269dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_interest"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="435dp"></Spinner>

    <Button
        android:id="@+id/add_information"
        android:layout_width="248dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_check"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="497dp" />

</android.support.constraint.ConstraintLayout>