<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/addinformation"
        android:layout_width="177dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/add_information" />

    <ImageView
        android:id="@+id/add_userimage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:src="@drawable/userimage1" />

    <Button
        android:id="@+id/add_userimage_button"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/add_userimage"
        android:layout_alignEnd="@+id/add_userimage"
        android:background="@drawable/add_userimage" />

    <TextView
        android:id="@+id/show_username"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/add_userbelong"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="230dp"
        android:text="User Name"
        android:src="@drawable/user_name" />

    <EditText
        android:id="@+id/add_username"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_username"
        android:layout_marginBottom="22dp"
        android:background="@drawable/block"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/add_gender"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_below="@+id/show_username"
        android:layout_toEndOf="@+id/add_userimage"
        android:button="@drawable/male_female_select" />

    <TextView
        android:id="@+id/show_birthday"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_username"
        android:text="Date of brith"
        />

    <TextView
        android:id="@+id/add_birthday_text"
        android:layout_width="255dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_birthday"
        android:layout_marginBottom="22dp"
        android:background="@drawable/block"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:text="0000년 00월 00일"
        android:textSize="15dp" />

    <Button
        android:id="@+id/add_birthday"
        android:layout_width="10dp"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="213dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/timebutton" />

    <TextView
        android:id="@+id/show_userbelong"
        android:layout_width="wrap_content"
        android:layout_height="22dp"

        android:text="User belong"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_birthday_text"  />

    <Spinner
        android:id="@+id/add_userbelong"
        android:layout_width="255dp"
        android:layout_height="36dp"
        android:layout_below="@+id/show_userbelong"
        >

    </Spinner>

    <RelativeLayout
        android:id="@+id/userimage_pick"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_userimage"
        android:background="@drawable/colorview"
        android:visibility="gone">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/userimage1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage1"/>
                <RadioButton
                    android:id="@+id/userimage2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage2"/>
                <RadioButton
                    android:id="@+id/userimage3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage3"/>
                <RadioButton
                    android:id="@+id/userimage4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage4"/>
                <RadioButton
                    android:id="@+id/userimage5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/userimage5"/>
            </RadioGroup>
        </HorizontalScrollView>
    </RelativeLayout>

    <TextView
        android:id="@+id/show_interest"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/add_userbelong"
        android:src="@drawable/interests" />

    <Spinner
        android:id="@+id/add_userinterest"
        android:layout_width="269dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/show_username"
        android:layout_below="@+id/show_interest"
        android:layout_marginTop="13dp"></Spinner>

    <Button
        android:id="@+id/add_information"
        android:layout_width="248dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_check" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addinformation"
        android:layout_alignTop="@+id/add_information"
        android:text="TextView" />

</RelativeLayout>